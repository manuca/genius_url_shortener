<!DOCTYPE html>
<html>
  <head>
    <title>Genius URL Shortener</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bg-indigo-100">
    <div class="container mx-auto">
      <%= yield %>
    </div>
  </body>
</html>
