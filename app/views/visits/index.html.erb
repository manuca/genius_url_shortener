<h1 class="title is-size-4">URL Visits</h1>

<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>URL</th>
      <th>IP</th>
      <th>When</th>
    </tr>
  </thead>

  <tbody>
    <% @visits.each do |visit| %>
      <tr>
        <td><%= visit.url.url %></td>
        <td><%= visit.ip %></td>
        <td><%= I18n.l(visit.created_at) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
