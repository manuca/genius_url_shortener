<div class="w-2/3 m-auto">
  <h1 class="font-bold text-xl mb-8">URL</h1>

  <table class="w-full">
    <thead>
      <tr class="border-b-2 border-indigo-800">
        <th class="pb-2">URL</th>
        <th class="pb-2">Visits</th>
      </tr>
    </thead>

    <tbody>
      <% @urls.each do |url| %>
        <tr>
          <td class="p-2 text-center"><%= link_to url.url, url.url %></td>
          <td class="p-2 text-center"><%= url.visits_count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

